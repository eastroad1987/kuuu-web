{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
      "@/app/*": [
        "./app/(routes)/*"
      ],
      "@/context/*": [
        "./app/context/*"
      ],
      "@/components/*": [
        "./app/components/*"
      ],
      "@/styles/*": [
        "./app/styles/*"
      ],
      "@/types/*": [
        "./app/types/*"
      ],
      "@/libs/*": [
        "./app/libs/*"
      ]
    },
    "types": ["node", "prisma"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prisma/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
